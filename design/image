    .dock-col-left, .dock-col-right{ width:100%; min-width: 0; }
    .lf-modal { flex-direction: column; height: 90vh; }
    .m-sidebar { width: 100%; border-left: none; border-top: 1px solid var(--border); }
    .m-preview { height: 50%; }
  }
</style>

